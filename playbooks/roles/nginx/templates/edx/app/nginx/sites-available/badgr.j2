upstream badgr_app_server {
  server {{ badgr_gunicorn_host }}:{{ badgr_gunicorn_port }} fail_timeout=0;

}

server {
  listen {{ BADGR_NGINX_PORT }} default_server;

  location / {
    {% if BADGR_ENABLE_BASIC_AUTH|bool %}
      {% include "basic-auth.j2" %}
    {% endif %}
    try_files $uri @proxy_to_app;
  }

  location ~ ^/static/(?P<file>.*) {
    root {{ badgr_data_dir }};
    try_files /staticfiles/$file =404;

    # return a 403 for static files that shouldn't be
    # in the staticfiles directory
    location ~ ^/static/(?:.*)(?:\.xml|\.json|README.TXT) {
        return 403;
    }

    expires epoch;
  }

  location ~ ^media/uploads/(?P<file>.*) {
      root {{ badgr_media_dir }}/uploads;
      try_files /$file =404;
  }


  {% include "robots.j2" %}



location @proxy_to_app {
    proxy_set_header X-Forwarded-Proto $http_x_forwarded_proto;
    proxy_set_header X-Forwarded-Port $http_x_forwarded_port;
    proxy_set_header X-Forwarded-For $http_x_forwarded_for;
    proxy_set_header Host $http_host;

    proxy_redirect off;
    proxy_pass http://badgr_app_server;
  }
}